{
  "expo": {
    "name": "zova",
    "slug": "zova",
    "version": "1.0.0",
    "scheme": "zova",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/icons/splash-icon-dark.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-web-browser",
        {
          "experimentalLauncherActivity": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Zova to access your camera for identity verification and service photos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Zova to access your photo library to upload service images and profile photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      "expo-build-properties",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.zova.serviceapp",
          "enableGooglePay": false
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zova.serviceapp.dev"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.zova.serviceapp.dev",
      "edgeToEdgeEnabled": true
    }
  }
}
